@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}

<table style="width: 98%; padding: 0; border-collapse: collapse; margin-left: auto; margin-right: auto" border="0">
    <tr>
        <td>&nbsp;</td>
    </tr>


    <tr>
        <td style="font-size: 12px;">

@model Jeanstation.Models.Jeans

            @{
                ViewBag.Title = "Details";
            }



            <fieldset>
                <legend>Jeans</legend>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Jeans_Name)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Jeans_Name)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Details)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Details)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Price)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Price)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.JeansCategory.strCategory)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.JeansCategory.strCategory)
                </div>
            </fieldset>
            <p>
                @if (User.IsInRole("admin"))
                { 
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) <span>|</span>
                }
                @Html.ActionLink("Back to List", "Index")|
       @Html.ActionLink("Add to Shopping Cart", "ShoppingCart", new { id = Model.ID })
            </p>
        </td>
    </tr>

</table>

